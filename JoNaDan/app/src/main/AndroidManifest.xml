<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.jonadan">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/jonadan"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/jonadan_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".LogoPage"
            android:theme="@android:style/Theme.NoTitleBar.Fullscreen"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".MainPage"/>
        <activity android:name=".ModifyPage"/>
        <activity
            android:name=".GameVsWordAndMean"
            android:theme="@style/noTitleBar">
        </activity>
        <activity
            android:name=".GameVsMe"
            android:theme="@style/noTitleBar">
        </activity>

        <!--얼럿창 설정-->
        <activity android:name=".PopupPage_AddWordCollection"
            android:theme="@style/popupTheme"
            android:screenOrientation="portrait">
        </activity>
        <activity android:name=".PopupPage_AddWord"
            android:theme="@style/popupTheme"
            android:screenOrientation="portrait">
        </activity>
        <activity android:name=".PopupPage_ModifyWordCollectionName"
            android:theme="@style/popupTheme"
            android:screenOrientation="portrait">
        </activity>
        <activity android:name=".PopupPage_SelectGame"
            android:theme="@style/popupTheme"
            android:screenOrientation="portrait">
        </activity>
    </application>

</manifest>