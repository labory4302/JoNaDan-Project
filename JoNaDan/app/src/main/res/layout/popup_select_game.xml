<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="248dp"
        android:layout_height="340dp"
        android:background="#9FE6DF"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/vsWord"
            android:layout_width="200dp"
            android:layout_height="44dp"
            android:layout_marginTop="36dp"
            android:background="#FFFFFF"
            android:gravity="center"
            android:text="나 VS 단어"
            android:textColor="@android:color/black"
            android:textSize="30sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/vsMean"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:background="#FFFFFF"
            android:gravity="center"
            android:text="나 VS 뜻"
            android:textColor="@android:color/black"
            android:textSize="30sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="@+id/vsWord"
            app:layout_constraintStart_toStartOf="@+id/vsWord"
            app:layout_constraintTop_toBottomOf="@+id/vsWord" />

        <TextView
            android:id="@+id/vsMeWord"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:background="#FFFFFF"
            android:gravity="center"
            android:text="나 VS 나(단어)"
            android:textColor="@android:color/black"
            android:textSize="30sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="@+id/vsMean"
            app:layout_constraintStart_toStartOf="@+id/vsMean"
            app:layout_constraintTop_toBottomOf="@+id/vsMean" />

        <TextView
            android:id="@+id/vsMeMean"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:background="#FFFFFF"
            android:gravity="center"
            android:text="나 VS 나(뜻)"
            android:textColor="@android:color/black"
            android:textSize="30sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="@+id/vsMeWord"
            app:layout_constraintStart_toStartOf="@+id/vsMeWord"
            app:layout_constraintTop_toBottomOf="@+id/vsMeWord" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>